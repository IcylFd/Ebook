/* pages/template/template_comment/template_comment.wxss */
.comment_item{
  width: 100%;
  height: 30vh;
  background-color: white;
  margin: 15rpx 0;
}
.comment_item_center{
  width: 90%;
  height: 100%;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
}
.comment_title{
  display: inline-block;
  font-size: 40rpx;
  margin: 20rpx 0;
}
.comment_content{
  display: -webkit-box;
  font-size:24rpx;
  line-height: 40rpx;
  color: gray;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 4;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 20rpx;
}
.commenter{
  font-size: 30rpx;
  color: gray;
}
.commenter_likecount{
  margin-left: 250rpx;
}
.commenter_commentcount{
  margin-left: 20rpx;
}