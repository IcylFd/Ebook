/* pages/template/template_bookMessage/template_bookMessage.wxss */
#bookMessage{
  width: 100%;
  height: 30vh;
  background-color: white;
  margin-top: 20rpx; 
  display: flex;
  justify-content: space-around;
  align-items: center;
}
#bookMessage_left{
  width: 250rpx;
  height: 300rpx;
  margin-left: 40rpx;
}
#bookMessage_right{
  width: 350rpx;
  height: 300rpx;
  margin-right: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
#bookMessage_right_top{
  width: 100%;
  height: 30%;
  font-size: 40rpx;
  font-weight: bold;
  display: flex;
  align-items: center;
}
#bookMessage_right_center{
  width: 100%;
  height: 30%;
  font-size: 30rpx;
  display: flex;
  align-items: center;
}
#bookMessage_right_bottom{
  width: 100%;
  height: 40%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
#bookMessage_right_bottom image{
  width: 60rpx;
  height: 60rpx;
}


/* 书籍来自 */
#bookFrom{
  width: 95%;
  height: 15vh;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#bookFrom_top{
  width: 90%;
  height: 30%;
  font-size: 30rpx;
  color: gray;
  display: flex;
  align-items: center;
}
#bookFrom_bottom{
  width: 90%;
  height: 70%;
  display: flex;
  align-items: center;
}
#bookFrom_bottom image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
#bookFrom_bottom_right{
  width: 80%;
  height: 100%;
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
  justify-content: center;
  font-size: 30rpx;
  color: black;
}