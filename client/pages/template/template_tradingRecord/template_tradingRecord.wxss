/* pages/template/template_tradingRecord/template_tradingRecord.wxss */
.trading_record_li{
  width: 95%;
  height: 30vh;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.li_top{
  width: 95%;
  height: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.li_top image{
  width: 40rpx;
  height: 40rpx;
}
.li_top text{
  font-size: 30rpx;
  color: gray;
  margin-left: 20rpx;
}
.li_center{
  width: 95%;
  height: 60%;
  display: flex;
  align-items: center;
  justify-content: flex-start;
}
.li_center_left{
  width: 180rpx;
  height: 180rpx;
}
.li_center_right{
  width: 400rpx;
  height: 180rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: space-around;
}
.li_center_right image{
  width: 40rpx;
  height: 40rpx;
}
.li_center_right text{
  font-size: 30rpx;
  color: gray;
  margin-left: 20rpx;
}
.right_part{
  display: flex;
  align-items: center;
}
.li_bottom{
  width: 95%;
  height: 20%;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.li_bottom_state{
  width: 150rpx;
  height: 70%;
  border: 1px solid gray;
  border-radius: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.li_bottom_state text{
  font-size: 30rpx;
  color: gray;
}