#login{
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: center;
  background-image: url("https://wx2.sinaimg.cn/mw690/6c465004gy1fqx996gev4j20af0ij75q.jpg");
}
#input_container{
  width: 90%;
  height: 20%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
}
#input_container input{
  width: 90%;
  height: 80rpx;
  border-bottom: 1px solid gray;
  font-size: 30rpx;
  text-align: center;
}
#zhuce{
  font-size: 25rpx;
  width: 80%;
  height: 60rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  color: green;
}
.sumbit_button{
  width: 60%;
  height: 80rpx;
  margin-bottom: 120rpx;
  border: none;
  color: gray;
}