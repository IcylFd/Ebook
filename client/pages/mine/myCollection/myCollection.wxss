@import "myCollection-item/myCollection-item-template.wxss";
.page{
  background-color: #f5f7f9;
  margin: 0;
  min-height: 100vh;
  height: auto;
}
.c-state1{
  transform: rotate(0deg) scale(1) translate(40%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(40%,0%); 
}
.page-bottom-heidden{
  transform: rotate(0deg) scale(1) translate(-100%,0%); 
  -webkit-transform: rotate(0deg) scale(1) translate(-100%,0%); 
}
 .main{
   height:8vh;
   width: 100%;
   background-color: #fff;
   position: fixed;
   top:0;
   z-index: 99;
} 

.search{
  margin-top:10rpx;
  width:80%;
  height:70rpx;
  background-color: #f5f5f5; 
  border-radius: 10px;
  float:left;
  margin-left:4%;
  position: relative;
}
.searchbox{
  position: absolute;
  top:15rpx;
  left:80rpx;
  
}
 .search image{
  width:35rpx;
  height:35rpx;
  margin-left: 20rpx;
  margin-top:18rpx;
  z-index: 2;
} 

.kind-icon{
  width:50rpx;
  height:50rpx;
  float:left;
  margin-left: 30rpx;
  margin-top:17rpx;
}
.content{
  margin:100rpx 20rpx 0rpx 20rpx;
  text-align: justify; 
}  

.left,.right{
  display: inline-block;
  vertical-align: top;
  width: 49%;
}
.right{
  float: right;
}
.page-bottom{
  position: fixed;
  top:0;
  height:100%;
  width:40%;
  background-color: rgba(144,157,237,0.6);
}
.classify{
  margin-top:50rpx;
  margin-left:30rpx;
}
.classify-item{
  color:#fff;
  font-size: 14px;
  line-height: 50rpx;
}
.sperate-line{
  height:1rpx;
  width:100%;
  background-color:#fff; 
  margin-top:20rpx;
  margin-bottom: 20rpx;
}