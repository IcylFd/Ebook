<template name="item">
  <view class='container'>
    <view class="item">
      <view bindtap='to_toex'><image class="item-img" src="{{url}}" mode="widthFix"></image></view>
      <view class="item-title-box">
        <view class='item-title'>{{title}}</view>
      </view>
      <view class="name">
        <image class="item-ava" src="{{avatar}}"></image>
        <text class="name-title">{{name}}</text>
        <view class="exchange-button" bindtap='onToexTap'>
          去交换
        </view>
      </view>
    </view>
  </view>
</template>