<!--pages/myBookShelf/myBookShelf.wxml-->
<view class='back'>

  <view class='search'>
    <image src="../img/search.png"></image>
    <input class='searchbox' placeholder='请输入书名' placeholder-style='font-size:30rpx' confirm-type='搜索'></input>
  </view>

  <view class='shelf'>
    <!-- <navigator url='AddMyBook/AddMyBook'>
      <view class='add-book'></view>
    </navigator> -->

    <block wx:for='{{books_key}}' wx:for-item="item" wx:key="">
      <!-- <navigator url='{{index==0?"AddMyBook/AddMyBook":"myBookDetails/myBookDetails"}}'> -->
      <view bindtap='scanCode'>
      <image wx:if="{{index==0}}？O" src='../img/bookshelf-img/plus.png' class='plus'></image>
        <image class='book-img' src='{{item.img}}'></image>
      </view>
      <!-- </navigator> -->
      <view class='seprate' wx:if="{{(index+1)%3==0}}"></view>
    </block>
    <view class='seprate' wx:if="{{books_key.length%3!=0}}"></view>

  </view>

</view>