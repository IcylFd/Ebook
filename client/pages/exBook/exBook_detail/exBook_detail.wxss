/* pages/exBook/exBook_detail/exBook_detail.wxss */
@import "../../template/template_comment/template_comment.wxss";
@import "../../template/template_bookMessage/template_bookMessage.wxss";
#exBook_detail{
  width: 100%;
  min-height: 100vh;
  height: auto;
  background-color: #f5f7f9;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}



/* 书籍来自 */
 #bookFrom{
  width: 100%;
  height: 15vh;
  background-color: white;
  margin-top: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
#bookFrom_top{
  width: 90%;
  height: 30%;
  font-size: 30rpx;
  color: gray;
  display: flex;
  align-items: center;
}
#bookFrom_bottom{
  width: 90%;
  height: 70%;
  display: flex;
  align-items: center;
}
.avator{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-left: 10rpx;
}
#bookFrom_bottom_right{
  width: 100%;
  height: 100%;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: gray;
}  
.exchange-button{
  border-radius: 25rpx;
  background-color: #bbc5ef;
  width:180rpx;
  height:60rpx;
  line-height: 60rpx;
  color:#fff;
  font-size: 24rpx;
  text-align: center;
}
/* 评论区 */
#bookComment{
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
}
::-webkit-scrollbar{
  width: 0;
  height: 0;
  color: transparent;
}